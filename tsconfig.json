{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.json", "src/**/*.json"],
  "exclude": ["node_modules", ".git", "src/*.test.ts", "src/**/*.test.ts"]
}
